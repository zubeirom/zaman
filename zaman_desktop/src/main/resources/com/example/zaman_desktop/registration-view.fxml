<AnchorPane id="AnchorPane" fx:id="registrationView" prefHeight="496.0" prefWidth="748.0" style="-fx-background-color: #fff;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.zaman_desktop.controller.RegistrationController">
   <children>
      <AnchorPane prefHeight="87.0" prefWidth="748.0" style="-fx-background-color: #0C39FF;">
         <children>
            <ImageView fx:id="imageLogoView" fitHeight="68.0" fitWidth="69.0" layoutX="29.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Logo.png" />
               </image>
            </ImageView>
            <Label alignment="CENTER" layoutX="101.0" layoutY="28.0" prefHeight="32.0" prefWidth="303.0" text="Zaman User Registration" textFill="WHITE">
               <font>
                  <Font name="Segoe UI" size="25.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <Label layoutX="119.0" layoutY="133.0" prefHeight="18.0" prefWidth="77.0" text="Email address" />
      <TextField fx:id="txtEmail" layoutX="119.0" layoutY="152.0" prefHeight="34.0" prefWidth="336.0" promptText="enter a valid email address" />
      <Label layoutX="119.0" layoutY="199.0" prefHeight="18.0" prefWidth="77.0" text="Firstname" />
      <TextField fx:id="txtFirstname" layoutX="119.0" layoutY="218.0" prefHeight="34.0" prefWidth="336.0" promptText="enter your firstname" />
      <Label layoutX="119.0" layoutY="266.0" prefHeight="18.0" prefWidth="77.0" text="Lastname" />
